
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
<h1>Are you sure you want to delete this program?</h1>
<h3>@Model.ProgramName</h3>

<form method="post">
    <!-- Hidden Input for Program ID -->
    <input type="hidden" name="Id" value="@Model.ProgramId" />

    <!-- Confirm and Cancel Buttons -->
    <input type="submit" value="Yes" class="btn btn-danger" name="dcsn" />
    <input type="submit" value="No" class="btn btn-warning" name="dcsn" />
</form>

